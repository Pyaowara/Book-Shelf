{
    "version": 2,
    "rewrites": [
        {
            "source": "/books/(.*)",
            "destination": "/api/books/$1"
        },
        {
            "source": "/searched/(.*)",
            "destination": "/api/searched/$1"
        },
        {
            "source": "/comments/(.*)",
            "destination": "/api/comments/$1"
        },
        {
            "source": "/register",
            "destination": "/api/register"
        },
        {
            "source": "/login",
            "destination": "/api/login"
        },
        {
            "source": "/getUserProfile",
            "destination": "/api/getUserProfile"
        },
        {
            "source": "/validate-token",
            "destination": "/api/validate-token"
        },
        {
            "source": "/change",
            "destination": "/api/change"
        },
        {
            "source": "/getUserId",
            "destination": "/api/getUserId"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}